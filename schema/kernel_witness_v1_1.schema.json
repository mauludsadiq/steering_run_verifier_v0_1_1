{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "fard://domain/kernel_witness/1.1/schema.json",
  "title": "KernelWitness v1.1",
  "type": "object",
  "additionalProperties": false,
  "required": ["witness_version", "domain", "run", "artifacts", "kernel"],
  "properties": {
    "witness_version": { "type": "string", "const": "1.1" },
    "domain": {
      "type": "object",
      "additionalProperties": false,
      "required": ["domain_name", "domain_version", "schema_cid", "verifier_cid"],
      "properties": {
        "domain_name": { "type": "string", "const": "kernel" },
        "domain_version": { "type": "string", "const": "1.1" },
        "schema_cid": { "type": "string", "minLength": 8 },
        "verifier_cid": { "type": "string", "minLength": 8 }
      }
    },
    "run": {
      "type": "object",
      "additionalProperties": false,
      "required": ["cid_run", "cid_run_algo", "cid_run_field_blank_value", "cid_run_blank_fields"],
      "properties": {
        "cid_run": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
        "cid_run_algo": { "type": "string", "const": "sha256" },
        "cid_run_field_blank_value": { "type": "string", "const": "" },
        "cid_run_blank_fields": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": { "type": "string" },
          "const": ["run.cid_run"]
        }
      }
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": false,
      "required": ["hash_algo", "items"],
      "properties": {
        "hash_algo": { "type": "string", "const": "sha256" },
        "items": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["cid", "bytes_hash", "media_type", "note"],
            "properties": {
              "cid": { "type": "string", "minLength": 8 },
              "bytes_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
              "media_type": { "type": "string" },
              "note": { "type": "string" }
            }
          }
        }
      }
    },
    "kernel": {
      "type": "object",
      "additionalProperties": false,
      "required": ["space", "projection_P", "descent_Phi", "nilpotence_k", "entropy", "samples"],
      "properties": {
        "space": {
          "type": "object",
          "additionalProperties": false,
          "required": ["dim"],
          "properties": { "dim": { "type": "integer", "minimum": 1 } }
        },
        "projection_P": { "$ref": "#/$defs/matrix" },
        "descent_Phi": { "$ref": "#/$defs/matrix" },
        "nilpotence_k": { "type": "integer", "minimum": 1 },
        "entropy": {
          "type": "object",
          "additionalProperties": false,
          "required": ["kind"],
          "properties": {
            "kind": { "type": "string", "const": "termination_height_under_Phi" }
          }
        },
        "samples": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["x0", "expect_height"],
            "properties": {
              "x0": { "$ref": "#/$defs/vector" },
              "expect_height": { "type": "integer", "minimum": 0 }
            }
          }
        }
      }
    }
  },
  "$defs": {
    "vector": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "integer" }
    },
    "matrix": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "array",
        "minItems": 1,
        "items": { "type": "integer" }
      }
    }
  }
}
